<UserControl
    x:Class="HalloweenControllerRPi.UI.ExternalDisplay.DetectingScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="64"
    d:DesignWidth="128"
   UseLayoutRounding="True">

   <Canvas x:Name="MainCanvas" UseLayoutRounding="True">
      <Border UseLayoutRounding="True" Width="128" Height="64" BorderBrush="White" BorderThickness="1" />
      <TextBlock UseLayoutRounding="True" x:Name="Text" TextAlignment="Center" Height="40" TextWrapping="Wrap" Text="Detecting Functions" Width="120" Foreground="White" FontSize="14" Canvas.Left="4" CharacterSpacing="40"/>
      <ProgressBar UseLayoutRounding="True" x:Name="ProgBar" BorderBrush="White" BorderThickness="1" Canvas.Top="40" Width="120" Canvas.Left="4" Height="8" />
      <TextBlock UseLayoutRounding="True" x:Name="ProgressText" TextAlignment="Center" Height="14" TextWrapping="Wrap" Text="0%" FontSize="12" Width="120" Canvas.ZIndex="100" Foreground="White" Canvas.Top="47" Canvas.Left="4"/>
   </Canvas>
</UserControl>
