<UserControl x:Class="HalloweenControllerRPi.Function_GUI.Func_Sound_GUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:HalloweenControllerRPi.Function_GUI"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="215"
             d:DesignWidth="240"
             mc:Ignorable="d">

   <Grid Background="LightGray">
      <TextBlock x:Name="textTitle"
                 Margin="2,2,0,0"
                 Foreground="Black"
                 Text="SOUND (#)" />
      <Slider x:Name="slider_Duration"
              Margin="5,82,5,0"
              VerticalAlignment="Top"
              Maximum="60000"
              Minimum="10"
              ValueChanged="slider_Duration_ValueChanged"
              Value="500" TickPlacement="None" />
      <Slider x:Name="slider_Volume"
              Margin="5,124,5,0"
              VerticalAlignment="Top"
              TickFrequency="5"
              ValueChanged="slider_Volume_ValueChanged"
              Value="100" />
      <Slider x:Name="slider_StartDelay"
              Margin="5,166,5,0"
              VerticalAlignment="Top"
              Maximum="10000"
              TickFrequency="1000"
              ValueChanged="slider_StartDelay_ValueChanged"
              Value="0" />
      <TextBlock x:Name="textBlock_Duration"
                 Width="109"
                 Margin="121,113,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="10"
                 Text="Duration: 500 (ms)" />
      <TextBlock x:Name="textBlock_Volume"
                 Width="109"
                 Margin="121,157,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="10"
                 Text="Volume: 100 (%)" />
      <TextBlock x:Name="textBlock_StartDelay"
                 Width="109"
                 Margin="121,197,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="10"
                 Text="Start Delay: 0 (ms)" />
      <ComboBox x:Name="comboBox_Track" HorizontalAlignment="Left" Margin="5,32,0,0" VerticalAlignment="Top" Width="230" SelectionChanged="comboBox_Track_SelectionChanged"/>
   </Grid>
</UserControl>
