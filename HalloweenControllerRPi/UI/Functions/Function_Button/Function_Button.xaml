<UserControl x:Class="HalloweenControllerRPi.Function_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:HalloweenControllerRPi"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="40"
             d:DesignWidth="80"
             UseLayoutRounding="True"
             mc:Ignorable="d">
   <Grid Background="Transparent" MaxWidth="80" MaxHeight="40" MinHeight="40" MinWidth="80">
      <Rectangle x:Name="rectBackground" Fill="{Binding FillColour, UpdateSourceTrigger=PropertyChanged}" Width="80" Height="40" Stroke="Black" StrokeThickness="1.2" RadiusX="5" RadiusY="5" />
      <TextBlock x:Name="buttonText" Text="{Binding ToolTip, UpdateSourceTrigger=PropertyChanged}" Width="80" Height="25" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" FontSize="15"/>
   </Grid>

</UserControl>