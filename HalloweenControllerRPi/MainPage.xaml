<Page x:Class="HalloweenControllerRPi.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:HalloweenControllerRPi="using:HalloweenControllerRPi"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:HalloweenControllerRPi"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

   <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
      <VariableSizedWrapGrid x:Name="Available_Board"
                             Width="1293"
                             Height="150"
                             Margin="10,131,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             AllowDrop="True"
                             CanDrag="True" />
      <Border Width="1293"
              Height="150"
              Margin="10,131,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              BorderBrush="Black"
              BorderThickness="2" />
      <VariableSizedWrapGrid x:Name="Available_Statics"
                             Width="602"
                             Height="150"
                             Margin="1308,131,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             AllowDrop="True"
                             CanDrag="True" />
      <Border Width="602"
              Height="150"
              Margin="1308,131,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              BorderBrush="Black"
              BorderThickness="2" />
      <TextBox x:Name="textBox_GPIOStatus"
               Width="1293"
               Height="58"
               Margin="10,68,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Background="Black"
               BorderBrush="Black"
               FontSize="32"
               Foreground="White"
               Text="Waiting to initialize GPIO..."
               TextWrapping="Wrap" />
      <Slider x:Name="ledBrightness" ValueChanged="LedBrightness_ValueChanged" Minimum="0.1" Maximum="100" VerticalAlignment="Center" Margin="25,334,30,702" Value="50" SmallChange="0.1" />
      <TextBlock HorizontalAlignment="Center" x:Name="ledPercent" Margin="25,423,1753,615" Width="142" FontSize="26.667" FontWeight="Bold" Foreground="Black" SelectionHighlightColor="{x:Null}">
      	<Run Text="0%" />
      </TextBlock>
   </Grid>
</Page>