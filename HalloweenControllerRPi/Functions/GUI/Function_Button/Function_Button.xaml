<UserControl x:Class="HalloweenControllerRPi.Function_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:HalloweenControllerRPi"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignWidth="30"
             d:DesignHeight="120"
             mc:Ignorable="d" 
             UseLayoutRounding="True">
   <Grid Background="LightSlateGray">
      <TextBlock x:Name="textBlock" Text="FUNCTION" Margin="-45,45,-45,45" TextAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" CanDrag="True" FontWeight="Bold" DragStarting="textBlock_DragStarting" UseLayoutRounding="True" RenderTransformOrigin="0.5,0.5">
         <TextBlock.RenderTransform>
            <CompositeTransform Rotation="-90"/>
         </TextBlock.RenderTransform>
      </TextBlock>
   </Grid>

</UserControl>