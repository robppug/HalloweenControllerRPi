<UserControl
    x:Class="HalloweenControllerRPi.Container.GroupContainerTriggered"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:UniversalWrapPanel="using:Gregstoll"   
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HalloweenControllerRPi.Container"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

   <Border BorderThickness="1" BorderBrush="Black">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
         <UniversalWrapPanel:UniversalWrapPanel x:Name="Container" HorizontalAlignment="Left" VerticalAlignment="Top" AllowDrop="True" MinHeight="300" MinWidth="400" Background="LightGray" Loaded="Panel_Loaded" Orientation="Horizontal" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <Image x:Name="imageTrigger" MinHeight="300" MinWidth="60" Source="ms-appx:///Assets/blank.png" Stretch="Fill" Width="52"/>
         </UniversalWrapPanel:UniversalWrapPanel>
      </ScrollViewer>
   </Border>
</UserControl>
