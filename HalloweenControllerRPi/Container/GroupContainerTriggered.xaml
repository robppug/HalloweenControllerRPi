<UserControl
    x:Class="HalloweenControllerRPi.Container.GroupContainerTriggered"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:UniversalWrapPanel="using:Gregstoll"   
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HalloweenControllerRPi.Container"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

   <ScrollViewer VerticalScrollBarVisibility="Auto">
      <UniversalWrapPanel:UniversalWrapPanel x:Name="Container" AllowDrop="True" MinHeight="300" MinWidth="400" Background="LightGray" Loaded="Panel_Loaded" Orientation="Horizontal">
         <Image x:Name="imageTrigger" MinHeight="300" MinWidth="60" VerticalAlignment="Stretch" Source="ms-appx:///Assets/Square44x44Logo.png" Stretch="Fill"/>
      </UniversalWrapPanel:UniversalWrapPanel>
   </ScrollViewer>
</UserControl>
